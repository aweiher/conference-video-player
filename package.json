{
  "name": "dev-conf-player-ng2",
  "version": "0.1.0",
  "description": "App to play dev conference videos",
  "scripts": {
    "compile-server": "./node_modules/.bin/tsc -p src/server",
    "compile-client": "./node_modules/.bin/webpack --progress --colors && ./node_modules/.bin/jade src/client --out dist/client --hierarchy",
    "compile": "npm run compile-server && npm run compile-client",
    "watch-js": "./node_modules/.bin/webpack --progress --colors --watch",
    "watch-jade": "./node_modules/.bin/jade -H --watch src/client/ --out dist/client",
    "watch": "npm run watch-js & npm run watch-jade",
    "start": "node dist/server",
    "copy-jspm-config": "cp jspm-config.js dist/config.js",
    "dev": "npm run compile-server & npm run watch & npm start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/defel/dev-conf-player-ng2"
  },
  "author": "Alexander Weiher <weiher@users.noreply.github.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/defel/dev-conf-player-ng2/issues"
  },
  "homepage": "https://github.com/defel/dev-conf-player-ng2#readme",
  "dependencies": {
    "angular2": "2.0.0-beta.0",
    "hapi": "^11.1.2",
    "hapi-webpack-plugin": "^1.3.0",
    "inert": "^3.2.0",
    "jade": "^1.11.0",
    "ts-loader": "^0.7.2",
    "tsd": "^0.6.5",
    "webpack": "^1.12.9"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^0.15.9",
    "jspm": "^0.16.0-beta.7",
    "reflect-metadata": "^0.1.2",
    "zone.js": "^0.5.8"
  },
  "jspm": {
    "directories": {
      "baseURL": "dist"
    },
    "configFile": "jspm-config.js",
    "dependencies": {
      "angular2": "npm:angular2@^2.0.0-beta.0",
      "es6-shim": "github:es-shims/es6-shim@^0.34.0",
      "reflect-metadata": "npm:reflect-metadata@^0.1.2",
      "ts": "github:frankwallis/plugin-typescript@^2.4.3",
      "zone.js": "npm:zone.js@^0.5.10"
    },
    "devDependencies": {
      "typescript": "npm:typescript@1.5.3"
    }
  }
}
